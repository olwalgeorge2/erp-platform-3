# ERP Platform Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=erp_platform
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration (KRaft / ZooKeeper-less)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=erp-platform

# KRaft controller quorum (host:port:nodeId entries, comma-separated)
KAFKA_CONTROLLER_QUORUM_VOTERS=1@localhost:9093

# API Gateway
API_GATEWAY_PORT=8080
API_GATEWAY_HOST=localhost

# JWT Configuration
JWT_SECRET=your-secret-key-change-this
JWT_EXPIRATION=3600

# Service Ports
TENANCY_IDENTITY_PORT=8081
FINANCIAL_MANAGEMENT_PORT=8082
INVENTORY_MANAGEMENT_PORT=8083
PROCUREMENT_PORT=8084
COMMERCE_PORT=8085
MANUFACTURING_PORT=8086
CRM_PORT=8087
BI_PORT=8088
COMMUNICATION_HUB_PORT=8089

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Environment
ENVIRONMENT=development
